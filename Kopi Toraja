  <script>
    function orderWhatsApp(coffeeType, quantity) {
      if(quantity < 1) {
        alert('Jumlah pesanan minimal 1');
        return;
      }
      const phone = '6282191302790'; // nomor WA tanpa 0 diawal, pakai kode negara
      const message = `Halo, saya ingin memesan:\n- ${coffeeType} sebanyak ${quantity} bungkus.\nMohon informasi lebih lanjut. Terima kasih!`;
      const url = `https://wa.me/${phone}?text=${encodeURIComponent(message)}`;
      window.open(url, '_blank');
    }
  </script>
